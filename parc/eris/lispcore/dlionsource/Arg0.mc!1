{File : Arg0.mcAuthor : Gwan Santosa and Don CharnleyDate : 17-Oct-85 13:25:05This program check if the displacement between PV and IVAR iscorrect}@VARCH:	TT _ uIVar,				c1, opcode[141'b];	Ybus _ TOSH xor smallpl, ZeroBr,	c2;	Rx _ TOS - 1, BRANCH[VAER0, $],		c3;		Rx _ Rx LShift1, SE _ 0,		c1;		Rx _ Rx + TT, L3 _ 0,			c2;	TT _ Rx + 12'd,	L2 _ 0,			c3;		TT _ PV - TT, CarryBr,			c1;			BRANCH[IVX, VAER1],		c2;	VAER0:	GOTO[ufnX2],			c1;VAER1:	GOTO[ufnX1],			c3;IVX:	rhRx _ nRhS, GOTO[Var2],	c3;	{END}	