                                                                      TO)                                                                                     of MSGDESCRIPTOR                                                                                         )))                                               (LA.PRINTSTAMP OUTPUTSTREAM)                                                              (* ; "*start*")                                               (LA.PRINTCOUNT NEWLENGTH OUTPUTSTREAM)                                                              (* ; "total message length")                                               (LA.PRINTCOUNT LAFITESTAMPLENGTH OUTPUTSTREAM)                                                              (* ; "length of this header")                                               (PROGN        (* ; "Now the 3 flag bytes")                                                      (BOUT OUTPUTSTREAM UNDELETEDFLAG)                                                      (BOUT OUTPUTSTREAM (COND                                                                            ((fetch (LAFITEMSG SEEN?)                                                                                of MSGDESCRIPTOR)                                                                             SEENFLAG)                                                                            (T UNSEENFLAG)))                                                      (BOUT OUTPUTSTREAM MARK)                                                      (BOUT OUTPUTSTREAM (CHARCODE CR)))                                               (LA.COPY.MESSAGE.TEXT MAILFOLDER OUTPUTSTREAM                                                       MSGDESCRIPTOR)                                               (MARKMESSAGE MSGDESCRIPTOR MAILFOLDER MOVETOMARK)                                                              (* ; "delete it")                                               (