	      (JUMPA NONE)
	      (MOVEI 4 , 0)             (* 4 is a flag to lowercase)
	      (MOVEI FX , 1)
	  LP  (ILDB 1 , 3)
	      (JUMPE 1 , DONE)
	      (CAIN 4 , 0)
	      (AOJA 4 , BOUT)           (* Set flag and output)
	      (CAIG 1 , 132Q)
	      (CAIGE 1 , 101Q)
	      (TDZA 4 , 4)
	      (ADDI 1 , 40Q)
	  BOUT(PUSHJ CP , FOUT)
	      (JUMPA LP)
	  NONE(CQ (PRIN1 "unknown" T))
	  DONE])

